{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "env": {
    "VITE_MONGO_URI": "@vite_mongo_uri",
    "FRONTEND_URL": "https://hotel-order-management-system.vercel.app" // Add frontend URL
  }
}
